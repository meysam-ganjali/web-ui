@import url("https://fonts.googleapis.com/css?family=Roboto:400,400i,700");

body
  font-family Roboto, sans-serif
  background #f9f0f
  margin 0
  height 100vh
  display grid
  place-items center
  color #505050
h1
  font-family 'Libre Franklin', sans-serif
  font-weight 100
  font-size 55px
  margin-bottom: 0
  
.card
  background white
  position relative
  border-radius 20px
  box-shadow 1px 1px 40px rgba(black, 0.1)
  max-width 300px
  display flex
  flex-direction column
  align-items center
  padding 15px
  box-sizing border-box
  svg
    width 150px
    height 150px
    border-radius 50%
    border solid 10px transparent
    background-image linear-gradient(white, white),linear-gradient(90deg, #ff606026 40%, #8860ff26 100%)
    background-clip padding-box, border-box
    background-origin padding-box, border-box
    background-size 100% 100%, 100% 100%
    background-position center center, center bottom
    background-repeat no-repeat
    transition 1s
    &:hover
      background-size 100% 100%, 200% 200%
    path
      fill #505050
  h2
    margin 0
    padding 1rem
  .title
    padding .7rem 1rem
    font-size 14px
    font-weight 600
    color #9a9a9a
  .desc
    padding: 1rem 1rem
    order 2
    text-align center
  .actions
    display flex
    button
      display flex
      flex-direction column
      align-items center
      background none
      border none
      font-size 16px
      padding .7rem 1rem
      color #707070
      font-weight 800
      i
        font-size 20px
        margin-bottom 5px
        padding 10px
        border-radius 50%
        transition .3s
        &.fa-heart
          color #ff6060
          background #ff606026
        &.fa-star
          color #8860ff
          background #8860ff26
          
button
    &:after
      display block
      position absolute
      top 20px
      left 50%
      font-size 160px
      transform: translateX(-50%)
      animation anim 2s
      opacity 0
.heart
  &:hover
    i.fas.fa-heart
      background #ff606080
    &:after
      content '\f004'
      color #ff606096
.star
  &:hover
    i.fas.fa-star
      background #8860ff80
    &:after
      content '\f005'
      color #8860ff96
      

@keyframes anim {
  5%, 80% {
    opacity 1
    font-size 180px
  }
  40%, 80%{
    font-size 160px
  }
  80%, 100% {
    opacity 0
  }
}

.fa-instagram
  color #8860ff
  position absolute
  top 3%
  right 2%
  font-size 38px
  &:hover
    font-size 42px
    color #ff6060
    transition all .1s linear
    cursor pointer


